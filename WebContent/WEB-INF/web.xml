<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>NexusPlay</display-name>
  <welcome-file-list>
    <welcome-file>MainPage</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>MainPage</display-name>
    <servlet-name>MainPage</servlet-name>
    <servlet-class>com.nexusplay.pages.MainPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainPage</servlet-name>
    <url-pattern>/MainPage</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>PlayMedia</display-name>
    <servlet-name>PlayMedia</servlet-name>
    <servlet-class>com.nexusplay.pages.PlayMedia</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>Search</display-name>
    <servlet-name>Search</servlet-name>
    <servlet-class>com.nexusplay.elements.Search</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PlayMedia</servlet-name>
    <url-pattern>/watch</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Search</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FileServlet</servlet-name>
    <servlet-class>com.nexusplay.security.FileServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>FileServlet</servlet-name>
    <url-pattern>*.mp4</url-pattern>
</servlet-mapping>
  <mime-mapping>
    <extension>.mp4</extension>
    <mime-type>video/mp4</mime-type>
  </mime-mapping>
  <listener>
    <listener-class>
  		com.nexusplay.security.SystemOverlord
  	</listener-class>
  </listener>
  <filter>
    <filter-name>QuerySafetyFilter</filter-name>
    <filter-class>com.nexusplay.security.QuerySafetyFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>QuerySafetyFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
</web-app>